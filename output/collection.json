{
  "info": {
    "_postman_id": "d12b3c51-4d83-4abc-aee7-999111aa2222",
    "name": "User API Collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "https://api.example.com"
    },
    {
      "key": "auth_token",
      "value": "your_token_here"
    }
  ],
  "item": [
    {
      "name": "GET /users",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{auth_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/users?page=1&limit=5",
          "host": ["{{base_url}}"],
          "path": ["users"],
          "query": [
            { "key": "page", "value": "1" },
            { "key": "limit", "value": "5" }
          ]
        }
      },
      "response": [
        {
          "name": "200 OK",
          "code": 200,
          "status": "OK",
          "body": "{\n  \"page\": 1,\n  \"limit\": 5,\n  \"total\": 100,\n  \"users\": [\n    {\n      \"id\": 1,\n      \"name\": \"Alice\",\n      \"email\": \"alice@example.com\"\n    },\n    {\n      \"id\": 2,\n      \"name\": \"Bob\",\n      \"email\": \"bob@example.com\"\n    }\n  ]\n}"
        }
      ]
    },
    {
      "name": "POST /users",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{auth_token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Charlie\",\n  \"email\": \"charlie@example.com\",\n  \"password\": \"Password123!\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/users",
          "host": ["{{base_url}}"],
          "path": ["users"]
        }
      },
      "response": [
        {
          "name": "201 Created",
          "code": 201,
          "status": "Created",
          "body": "{\n  \"id\": 3,\n  \"name\": \"Charlie\",\n  \"email\": \"charlie@example.com\"\n}"
        },
        {
          "name": "400 Bad Request",
          "code": 400,
          "status": "Bad Request",
          "body": "{\n  \"error\": \"Email already exists\"\n}"
        }
      ]
    },
    {
      "name": "GET /users/:id",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{auth_token}}" }
        ],
        "url": {
          "raw": "{{base_url}}/users/1",
          "host": ["{{base_url}}"],
          "path": ["users", "1"]
        }
      },
      "response": [
        {
          "name": "200 OK",
          "code": 200,
          "status": "OK",
          "body": "{\n  \"id\": 1,\n  \"name\": \"Alice\",\n  \"email\": \"alice@example.com\"\n}"
        },
        {
          "name": "404 Not Found",
          "code": 404,
          "status": "Not Found",
          "body": "{\n  \"error\": \"User not found\"\n}"
        }
      ]
    },
    {
      "name": "DELETE /users/:id",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{auth_token}}" }
        ],
        "url": {
          "raw": "{{base_url}}/users/3",
          "host": ["{{base_url}}"],
          "path": ["users", "3"]
        }
      },
      "response": [
        {
          "name": "204 No Content",
          "code": 204,
          "status": "No Content",
          "body": ""
        },
        {
          "name": "404 Not Found",
          "code": 404,
          "status": "Not Found",
          "body": "{\n  \"error\": \"User not found\"\n}"
        }
      ]
    }
  ]
}
